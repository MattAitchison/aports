# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=abuild
pkgver=2.20.1
_ver=${pkgver%_git*}
pkgrel=0
pkgdesc="Script to build Alpine Packages"
url="http://git.alpinelinux.org/cgit/abuild/"
arch="all"
license="GPL2"
depends="fakeroot sudo pax-utils openssl apk-tools>=2.0.7-r1 libc-utils"
if [ "$CBUILD" = "$CHOST" ]; then
	depends="$depends curl"
fi
makedepends_build="pkgconfig"
makedepends_host="libressl-dev"
makedepends="$makedepends_host $makedepends_build"
install="$pkgname.pre-install $pkgname.pre-upgrade"
subpackages="apkbuild-cpan:cpan"
pkggroups="abuild"
source="http://dev.alpinelinux.org/archive/abuild/abuild-$pkgver.tar.xz
	dos_paths.patch
	openssl_flags.patch
	"

_builddir="$srcdir/$pkgname-$_ver"
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch)
			msg "Applying $i"
			patch -p1 -i "$srcdir"/$i || return 1
			;;
		esac
	done
	sed -i -e "/^CHOST=/s/=.*/=$CHOST/" abuild.conf
}

build() {
	cd "$_builddir"
	prefix=/Development bindir=/Development/Programs sysconfdir=/Development/Settings datadir=/Development/Common/abuild make || return 1
}

package() {
	cd "$_builddir"
	prefix=/Development bindir=/Development/Programs sysconfdir=/Development/Settings datadir=/Development/Common/abuild \
		make install DESTDIR="$pkgdir" || return 1
	install -m 644 abuild.conf "$pkgdir"/Development/Settings/abuild.conf || return 1
	install -d -m 775 -g abuild "$pkgdir"/Development/Cache/distfiles || return 1
}

cpan() {
	pkgdesc="Script to generate perl APKBUILD from CPAN"
	depends="perl perl-libwww perl-json"
	arch="noarch"
	mkdir -p "$subpkgdir"/Development/Programs
	mv "$pkgdir"/Development/Programs/apkbuild-cpan "$subpkgdir"/Development/Programs/
}

